---
import Layout from '../layouts/Layout.astro';
const originalPath = Astro.url.origin
---
<Layout title="Success page - Thanks for contacting me">
  <div class="success-container">
    <div>
      <h1>Thanks for contacting me!</h1>
      <h3>I will asnwer you soon as possible</h3>
      <a href={originalPath}>Go back</a>
    </div>
  </div>
</Layout>

<style>
  .success-container{
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .success-container>div{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border: 2px double #808080;
    padding: 1rem;
    border-radius: 1rem;
  }
  .success-container>div>a{
    padding: .4rem;
    border: none;
    font-size: 1.2rem;
    font-weight: 800;
    border: 2px solid gray;
    background-color: #13151a;
    color: gray;
    border-radius: .3rem;
    text-decoration: none;
    cursor: pointer;
  }
  .success-container>div>a:hover{
    animation: .2s successButton ease-in forwards;
  }

  @keyframes successButton{
    to{
      box-shadow: 0 0 1em white, 0 0 0.2em white;
    }
  }
</style>